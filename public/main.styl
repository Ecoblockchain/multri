@import base
@import alias

.nav
  lh 1
  pa 1rem 1rem 0.8rem
  bborb 0.1
  align center
  ff font-sans
  a
    tdec none
    fw bold
    bco()
  .links
    a
      fs 14px
      ml 0.75rem

.wrap
  w 1105px
  m 0 auto

.body
  m 2rem auto

.homepage
  m 4rem auto
  w 435px
  .top
    align center
    .davheed
      img
        w 200px
    .logo
      fw bold
      mb 0.35rem
      fs 180%
    .slogan
      fs 120%
      mb 1rem
    form
      mt 1.5rem
      mb 0.5rem
      input
        w 200px
    .subtitle
      fs 85%
      bco 0.5
  ul.papers
    list-style none
    mt 3rem
    pa 0
    li
      pa 0.55rem 0
      a
        lh 1.4
        bco-hover 0.7 1
        &:hover
          tdec none

.logo
  bco()
  cur pointer
  disp inline-block
  f bold 120% font-sans
  tdec none
  opacity 0.8
  &:hover
    opacity 0.9
    tdec none

#sidebar
  disp none

.pdf-viewer
  .paper
    w 925px
    pos relative
    #page-container
      pos static
      of hidden
      z 1
      bg none
      .pf
        brad 5px
        m 0
        bbor 0.2
        lcmb 1rem
        bs none
        of hidden
    .marker
      pos absolute
      z 3
      r -8px
      sq 28px
      cur pointer
      brad 9999px
      bg #ccc
      &:hover
        bg lighten(color-theme, 40%)
      &.selected
        bg lighten(color-theme, 0%)
  .margin
    w 150px
    ml 30px
    pos relative
    bb()
    .nn-message
      fs 14px
      align center
    form
      textarea
        h 200px
        f normal 90%/1.3 font-mono
        aa auto
    .add-note
      h 300px
    .note
      z 4
      bb()
      bs 0 0 0 2px color-theme
      wbg()
      pos absolute
      w 275px
      l -125px
      .triangle
        pos absolute
        l -25px
        sq 0
        bor solid 12px transparent
        border-right-color color-theme
      .comment
        pa 0.75rem
        fs 12px
        lh 1.3
        &:not(:last-child)
          bborb 0.05
        h1, h2, h3, p, blockquote
          lcmb 0.5rem
        li > p:last-child
          mb 0.5rem
        .adding-comment
          align center
        .comment-info
          mb 0.6rem
          ff font-sans
          .image
            sq 32px
            of hidden
            brad 4px
            wbg()
            img
              sq 32px
          .info
            ml 0.5rem
            lh 1
            .name
              bco()
              fw bold
              mt 0.25rem
              mb 0.2rem
           .date
              co #999
              fw 400
              fs 90%
              a, .part
                disp inline-block
                mr 0.5rem
              a, .link
                co inherit
                tdec underline

.yselect-hilite
  z 2
  bb()
  h 20px
  pos absolute
  l 0
  cur pointer
  bbg 0.1
  &.selected
    bor solid 1px rgba(color-theme, 0.2)
    borl 0
    borr 0
    bg rgba(color-theme, 0.2)

.profile
  w 400px
  m 0 auto

.index-nav
  co #888
  fs 13px
  mt 0.25rem
  a
    co inherit
    tdec underline
