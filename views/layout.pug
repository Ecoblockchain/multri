extends base

block content
  .nav.wrap.cf
    a.logo.l(href='/') Multiverse Triangle
    .links.r
      if user
        a(href='/profile') Profile
        a(href='/logout') Logout
      else
        a(href='/login') Login
  if messages.error
    .alert.error= messages.error
  if messages.success
    .alert.success= messages.success
  .body.wrap
    block body
